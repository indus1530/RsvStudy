<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.rsvstudy.ui.form1.Section04Activity" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnClearView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            android:src="@drawable/ic_clear_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/RS86acv"
            style="@style/cardView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            app:cardElevation="2sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/RS86"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/linearlayout_view_wt_bound"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/i_textview"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:paddingStart="50dp"
                        android:text="@string/RS86" />

                    <TextView
                        android:id="@+id/rs86DaysCounter"
                        style="@style/i_textview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="NO:02" />

                </LinearLayout>

                <TextView
                    style="@style/i_textview"
                    android:text="@string/RS86h1" />

                <!--RS861-->
                <LinearLayout
                    style="@style/linearlayout_view"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="3"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="@string/RS86a"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <RadioGroup
                        android:id="@+id/RS861"
                        style="@style/radiogroup"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/RS861a"
                            style="@style/radiobutton"
                            android:layout_weight="1"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/RS861b"
                            style="@style/radiobutton"
                            android:layout_weight="1"
                            android:text="@string/no" />

                    </RadioGroup>
                </LinearLayout>

                <!--RS862-->
                <LinearLayout
                    style="@style/linearlayout_view"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="3"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="@string/RS86b"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <RadioGroup
                        android:id="@+id/RS862"
                        style="@style/radiogroup"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/RS862a"
                            style="@style/radiobutton"
                            android:layout_weight="1"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/RS862b"
                            style="@style/radiobutton"
                            android:layout_weight="1"
                            android:text="@string/no" />

                    </RadioGroup>
                </LinearLayout>

                <!--RS863-->
                <LinearLayout
                    style="@style/linearlayout_view"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="3"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="@string/RS86c"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <RadioGroup
                        android:id="@+id/RS863"
                        style="@style/radiogroup"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/RS863a"
                            style="@style/radiobutton"
                            android:layout_weight="1"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/RS863b"
                            style="@style/radiobutton"
                            android:layout_weight="1"
                            android:text="@string/no" />

                    </RadioGroup>
                </LinearLayout>

                <!--RS864-->
                <LinearLayout
                    style="@style/linearlayout_view"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="3"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="@string/RS86d"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <RadioGroup
                        android:id="@+id/RS864"
                        style="@style/radiogroup"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/RS864a"
                            style="@style/radiobutton"
                            android:layout_weight="1"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/RS864b"
                            style="@style/radiobutton"
                            android:layout_weight="1"
                            android:text="@string/no" />

                    </RadioGroup>
                </LinearLayout>


                <io.blackbox_vision.datetimepickeredittext.view.DatePickerEditText
                    android:id="@+id/RS86d1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:focusable="false"
                    android:hint="@string/date"
                    android:tag="RS864a"
                    android:text='@{RS861a.checked || RS862a.checked || RS863a.checked || RS864a.checked ? RS86d1.getText().toString() : "" }'
                    android:visibility='@{RS861a.checked || RS862a.checked || RS863a.checked || RS864a.checked ? View.VISIBLE : View.GONE}'
                    app:dateFormat="dd-MM-yyyy"
                    app:maxDate="CR_DATE" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>