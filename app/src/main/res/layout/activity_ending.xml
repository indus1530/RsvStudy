<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.aku.hassannaqvi.rsvstudy.ui.other.EndingActivity">


    <ScrollView
        android:id="@+id/scrollView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layoutDirection="rtl"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="@string/dcstatus"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup
                android:id="@+id/istatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/istatus1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/istatus1"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/istatus2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/istatus2"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/istatus3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/istatus3"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/istatus4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/istatus4"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/istatus5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/istatus5"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/istatus6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/istatus6"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/istatus7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/istatus7"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/istatus8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/uother"
                    android:textSize="25sp" />

            </RadioGroup>

            <EditText
                android:id="@+id/istatus888x"
                android:layout_marginBottom="1dp"
                android:hint="@string/specify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/ed_sentence"
                android:inputType="textShortMessage"
                android:visibility="gone" />

            <!--RS82 - Date Picker-->
            <android.support.v7.widget.CardView
                android:id="@+id/RS82cv"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/RS82"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <io.blackbox_vision.datetimepickeredittext.view.DatePickerInputEditText
                        android:id="@+id/RS82"
                        style="@style/textInput"
                        android:focusable="false"
                        android:hint="DD/MM/YYYY"
                        android:textColor="@android:color/black"
                        app:dateFormat="dd-MM-yyyy"
                        app:minDate="CR_DATE" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btn_End"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:onClick="endInterview"
                android:text="@string/end_interview"
                android:textColor="#ff1e1e"
                android:textSize="30dp" />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
