<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_po_hhs_fl.ui.form1.F1Section08Activity" />

    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        tools:context=".ui.form1.F1Section08Activity">

        <LinearLayout
            android:id="@+id/ll08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/textview_fm_lst_h"
                android:text="@string/pocfsec8" />


            <!--pocfh01-->
            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/pocfh01" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/pocfh01"
                        style="@style/EditText_number"
                        android:hint="##.##"
                        android:layoutDirection="ltr"
                        app:mask="##.##"
                        app:maxValue="40.00"
                        app:minValue="00.90"
                        app:pattern="^(\\d{2,2}\\.\\d{2,2})$"
                        app:type="range" />

                    <!--<com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/pocfh01"
                        style="@style/EditText_number"
                        android:hint="##.##"
                        android:layoutDirection="ltr"
                        app:mask="##.##"
                        app:maxValue="40"
                        app:minValue="0.9"
                        app:type="range" />-->

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--pocfh02-->
            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/pocfh02" />

                    <!--<com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/pocfh02"
                        style="@style/EditText_number"
                        android:hint="###.#"
                        android:layoutDirection="ltr"
                        app:mask="###.#"
                        app:maxValue="140.0"
                        app:minValue="015.0"
                        app:pattern="^(\\d{3,3}\\.\\d{1,1})$"
                        app:type="range" />-->

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/pocfh02"
                        style="@style/EditText_number"
                        android:hint="###"
                        android:layoutDirection="ltr"
                        app:mask="###"
                        app:maxValue="140"
                        app:minValue="15"
                        app:type="range" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--pocfh03-->
            <android.support.v7.widget.CardView
                android:id="@+id/pocfh03cv"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/pocfh03" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/pocfh03"
                        style="@style/EditText_number"
                        android:hint="##.#"
                        android:layoutDirection="ltr"
                        app:mask="##.#"
                        app:maxValue="25.0"
                        app:minValue="05.0"
                        app:pattern="^(\\d{2,2}\\.\\d{1,1})$"
                        app:type="range" />

                    <!-- <com.edittextpicker.aliazaz.EditTextPicker
                         android:id="@+id/pocfh03"
                         style="@style/EditText_number"
                         android:hint="##.#"
                         android:layoutDirection="ltr"
                         app:mask="##.#"
                         app:maxValue="25"
                         app:minValue="5"
                         app:type="range" />-->

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!--  = = = = =  END OF FORM FIELDS  = = = = = -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="32dp">

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_green_light"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</layout>
