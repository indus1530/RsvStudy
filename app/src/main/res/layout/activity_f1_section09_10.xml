<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_po_hhs_fl.ui.form1.F1Section09_10Activity" />

    </data>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        tools:context=".ui.form1.F1Section09_10Activity">

        <LinearLayout
            android:id="@+id/ll0910"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="@string/pocfsec9"
                android:textSize="40sp" />

            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/pocfi01" />

                    <RadioGroup
                        android:id="@+id/pocfi01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/pocfi01a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/pocfi01b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="@string/no" />


                    </RadioGroup>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/pocfi02" />

                    <RadioGroup
                        android:id="@+id/pocfi02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/pocfi02a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/pocfi02b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="@string/no" />


                    </RadioGroup>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="@string/pocfsec10"
                android:textSize="40sp" />

            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/pocfj01" />

                    <LinearLayout
                        android:id="@+id/fldGrppocfj01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:tag="0">

                        <CheckBox
                            android:id="@+id/pocfj01a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01a" />

                        <CheckBox
                            android:id="@+id/pocfj01b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01b" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/pocfj01bx"
                            style="@style/EditText_number"
                            android:hint="@string/pocfj01bt"
                            android:tag="pocfj01b"
                            android:text='@{pocfj01b.checked ? pocfj01bx.getText.toString : "" }'
                            android:visibility='@{pocfj01b.checked ? View.VISIBLE : View.GONE}'
                            app:defaultValue="0.0"
                            app:mask="##.#"
                            app:maxValue="43.0"
                            app:minValue="33.0"
                            app:type="range" />

                        <CheckBox
                            android:id="@+id/pocfj01c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01c" />

                        <CheckBox
                            android:id="@+id/pocfj01d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01d" />

                        <CheckBox
                            android:id="@+id/pocfj01e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01e" />

                        <CheckBox
                            android:id="@+id/pocfj01f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01f" />

                        <CheckBox
                            android:id="@+id/pocfj01g"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01g" />

                        <CheckBox
                            android:id="@+id/pocfj01h"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01h" />

                        <CheckBox
                            android:id="@+id/pocfj01i"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01i" />

                        <CheckBox
                            android:id="@+id/pocfj01j"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01j" />

                        <CheckBox
                            android:id="@+id/pocfj01k"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01k" />

                        <CheckBox
                            android:id="@+id/pocfj01l"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01l" />

                        <CheckBox
                            android:id="@+id/pocfj01m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01m" />

                        <CheckBox
                            android:id="@+id/pocfj01n"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01n" />

                        <CheckBox
                            android:id="@+id/pocfj01o"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01o" />

                        <CheckBox
                            android:id="@+id/pocfj01p"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01p" />

                        <CheckBox
                            android:id="@+id/pocfj0196"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/other" />

                        <EditText
                            android:id="@+id/pocfj0196x"
                            style="@style/EditTextAlphaNumeric"
                            android:hint="@string/specify"
                            android:tag="pocfj0196"
                            android:text='@{pocfj0196.checked? pocfj0196x.getText.toString : "" }'
                            android:visibility='@{pocfj0196.checked? View.VISIBLE : View.GONE}' />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/pocfj0197"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="-1"
                        android:text="@string/none" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/pocfj02" />

                    <RadioGroup
                        android:id="@+id/pocfj02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/pocfj02a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="@string/yes" />

                        <EditText
                            android:id="@+id/pocfj02ax"
                            style="@style/EditTextAlphaNumeric"
                            android:hint="@string/specify"
                            android:tag="pocfj02a"
                            android:text='@{pocfj02a.checked? pocfj02ax.getText.toString : "" }'
                            android:visibility='@{pocfj02a.checked? View.VISIBLE : View.GONE}' />

                        <RadioButton
                            android:id="@+id/pocfj02b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="@string/no" />


                    </RadioGroup>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!--  = = = = =  END OF FORM FIELDS  = = = = = -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="32dp">

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_green_light"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</layout>
