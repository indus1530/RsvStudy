<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.form1.Form2BTest">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.rsvstudy.ui.form1.Form2BTest" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lltest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/HeadingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/RST307" />

                <!--   RST307View   -->
                <LinearLayout
                    android:id="@+id/RST307View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <!-- RST307A EditText -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/RST307Acv"
                        style="@style/cardView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="RST307A" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:padding="16dp"
                                android:text="@string/RST307A"
                                android:textColor="@color/colorPrimary"
                                android:textSize="22sp" />

                            <TextView
                                android:id="@+id/RST307A"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="center"
                                android:padding="16dp"
                                android:text="@string/RST307A"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <!--<com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/RST307A"
                                style="@style/EditTextNum"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:hint="@string/RST307A" />-->

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- RST307B Radio -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/RST307Bcv"
                        style="@style/cardView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bottom"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/quesNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="RST307B" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:padding="16dp"
                                    android:text="@string/RST307B"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="22sp" />

                            </LinearLayout>

                            <RadioGroup
                                android:id="@+id/RST307B"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/RST307Ba"
                                    style="@style/radiobutton"
                                    android:text="@string/RST307Ba" />

                                <RadioButton
                                    android:id="@+id/RST307Bb"
                                    style="@style/radiobutton"
                                    android:text="@string/RST307Bb" />

                                <RadioButton
                                    android:id="@+id/RST307Bc"
                                    style="@style/radiobutton"
                                    android:text="@string/RST307Bc" />

                                <RadioButton
                                    android:id="@+id/RST307Bd"
                                    style="@style/radiobutton"
                                    android:text="@string/RST307Bd" />

                                <RadioButton
                                    android:id="@+id/RST307Be"
                                    style="@style/radiobutton"
                                    android:text="@string/RST307Be" />

                                <RadioButton
                                    android:id="@+id/RST307Bf"
                                    style="@style/radiobutton"
                                    android:text="@string/RST307Bf" />

                                <RadioButton
                                    android:id="@+id/RST307Bg"
                                    style="@style/radiobutton"
                                    android:text="@string/RST307Bg" />

                                <RadioButton
                                    android:id="@+id/RST307Bh"
                                    style="@style/radiobutton"
                                    android:text="@string/RST307Bh" />

                                <RadioButton
                                    android:id="@+id/RST307Bi"
                                    style="@style/radiobutton"
                                    android:text="@string/RST307Bi" />

                                <RadioButton
                                    android:id="@+id/RST307Bj"
                                    style="@style/radiobutton"
                                    android:text="@string/RST307Bj" />

                            </RadioGroup>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- RST307C Radio -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/RST307Ccv"
                        style="@style/cardView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bottom"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/quesNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="RST307C" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:padding="16dp"
                                    android:text="@string/RST307C"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="22sp" />

                            </LinearLayout>

                            <RadioGroup
                                android:id="@+id/RST307C"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/RST307Ca"
                                    style="@style/radiobutton"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:text="@string/Eyes" />

                                <RadioButton
                                    android:id="@+id/RST307Cb"
                                    style="@style/radiobutton"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:text="@string/Eno" />

                            </RadioGroup>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- RST307D EditText -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/RST307Dcv"
                        style="@style/cardView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/i_textview"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/RST307D" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/RST307D"
                                style="@style/EditTextNum"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLength="5"
                                android:hint="###"
                                android:inputType="numberDecimal"
                                app:maxValue="100"
                                app:minValue="0"
                                app:type="range" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- RST307E EditText -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/RST307Ecv"
                        style="@style/cardView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/i_textview"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/RST307E" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/RST307E"
                                style="@style/EditTextNum"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLength="5"
                                android:hint="###"
                                android:inputType="numberDecimal"
                                app:maxValue="100"
                                app:minValue="0"
                                app:type="range" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- RST307F EditText -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/RST307Fcv"
                        style="@style/cardView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/i_textview"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/RST307F" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/RST307F"
                                style="@style/EditTextNum"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLength="5"
                                android:hint="###"
                                android:inputType="numberDecimal"
                                app:maxValue="100"
                                app:minValue="0"
                                app:type="range" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/RST307Items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>


            </LinearLayout>


            <!--  = = = = =  END OF FORM FIELDS  = = = = = -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="32dp">


                <Button
                    android:id="@+id/btnEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="End Interview"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_green_light"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save &amp; Continue"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/AddTest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_green_dark"
                    android:onClick="@{() -> callback.addTest()}"
                    android:text="Add Test"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>
