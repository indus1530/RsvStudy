<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rsv_bg"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="72dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="edu.aku.hassannaqvi.rsvstudy.ui.other.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <!-- Login progress -->
            <TextView
                android:id="@+id/lblAppVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/lightOrange"
                android:drawableStart="@drawable/ic_warning_black_24dp"
                android:drawablePadding="12dp"
                android:textColor="@color/darkRed"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lblMainMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/dullWhite"
                android:text="Main Menu"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/lblheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorPrimary"
                android:text="Main Menu"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recordSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/black"
                android:padding="20dp"
                android:text="Records Summary"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="?android:textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:text="AREA: "
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spAreas"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="35"
                    android:gravity="center"
                    android:popupBackground="#ffffff" />

            </LinearLayout>

            <Button
                android:id="@+id/form01"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorSecondary"
                android:elevation="1dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:radius="2dp"
                android:onClick="openForm"
                android:shadowRadius="@android:integer/config_mediumAnimTime"
                android:text="Open New Form"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />


            <Button
                android:id="@+id/syncServer"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorSecondary"
                android:elevation="1dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:onClick="syncServer"
                android:radius="2dp"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:text="Upload Data" />

            <Button
                android:id="@+id/syncDevice"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorSecondary"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/colorAccent"
                android:onClick="syncDevice"
                android:text="Download Data"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/adminsec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="CheckCluster"
                        android:text="Check Block" />

                </LinearLayout>


                <Button
                    android:id="@+id/openMembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Section Members"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Section A"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Section B"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Section C"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/open4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="OpenSection4"
                    android:text="Section 4" />

                <Button
                    android:id="@+id/openG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Section G"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openHA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Section HA"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openHB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Section HB"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Section I"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openJ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Section J"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Section K"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Section L"
                    android:visibility="gone" />


                <Button
                    android:id="@+id/downloadApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/red"
                    android:text="DOWNLOAD APP"
                    android:textColor="@color/white"
                    android:visibility="gone" />


                <!--<Button-->
                <!--android:id="@+id/openEnd"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="8dp"-->
                <!--android:layout_marginTop="16dp"-->
                <!--android:onClick="openEnd"-->
                <!--android:text="Section End" />-->

                <Button
                    android:id="@+id/updateApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="#D60000"
                    android:onClick="updateApp"
                    android:text="Update App"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/openDB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="openDB"
                    android:text="Open Database Manager" />

                <Button
                    android:id="@+id/testGPS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="testGPS"
                    android:text="Test GPS Coordinates" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</layout>
